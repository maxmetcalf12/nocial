<div class="min-h-screen bg-white flex flex-col md:flex-row">
  <%= render partial: 'devise/components/sidebar' %>
  <div class="flex-1 flex flex-col flex-grow md:justify-center py-12 px-4 sm:px-6 lg:px-20 xl:px-24">
    <div class="mx-auto w-full max-w-md flex flex-col items-center">
      <h2 class="md:my-6 text-3xl md:text-4xl leading-9 font-extrabold text-gray-900">
        Sign up
      </h2>

      <div class="w-full border rounded p-8">
        <div>
          <span class="w-full inline-flex rounded-md shadow-sm">
            <%= link_to root_path, class: "w-full flex items-center justify-center py-2 px-4 border border-gray-500 rounded-full bg-white font-medium text-gray-500 hover:bg-gray-100 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue transition duration-150 ease-in-out" do %>
              <%= image_tag "logos/google.svg", class: "h-6 mr-2" %>
              <span class="mt-1">Sign up with Google</span>
            <% end %>
          </span>
        </div>

        <div class="mt-2">
          <span class="w-full inline-flex rounded-md shadow-sm">
            <%= link_to root_path, class: "w-full flex items-center justify-center py-2 px-4 border border-gray-500 rounded-full bg-white font-medium text-gray-500 hover:bg-gray-100 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue transition duration-150 ease-in-out" do %>
              <%= image_tag "logos/facebook.png", class: "h-6 mr-2" %>
              <span class="mt-1">Sign up with Facebook</span>
            <% end %>
          </span>
        </div>

        <div class="relative mt-4">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-lg">
            <span class="px-2 bg-white text-gray-500">
              or
            </span>
          </div>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "block space-y-4" })  do |f| %>
          <div class="">
            <%= f.label :email, class: "block text-sm font-medium leading-5 text-gray-700" %>
            <div class="mt-1 rounded-md shadow-sm">
              <%= f.email_field :email, class: "appearance-none text-xl block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-teal focus:border-teal-300 transition duration-150 ease-in-out sm:leading-5" %>
            </div>
          </div>

          <div class="">
            <%= f.label :password, class: "block text-sm font-medium leading-5 text-gray-700" %>
            <div class="mt-1 rounded-md shadow-sm">
              <%= f.password_field :password, class: "appearance-none text-xl block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-teal focus:border-teal-300 transition duration-150 ease-in-out sm:leading-5" %>
            </div>
          </div>

          <div class="">
            <%= f.label :password_confirmation, class: "block text-sm font-medium leading-5 text-gray-700" %>
            <div class="mt-1 rounded-md shadow-sm">
              <%= f.password_field :password_confirmation, class: "appearance-none text-xl block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-teal focus:border-teal-300 transition duration-150 ease-in-out sm:leading-5" %>
            </div>
          </div>

          <div class="">
            <span class="block w-full rounded-md shadow-sm">
              <%= f.submit "Sign up", class: "w-full cursor-pointer text-xl flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-teal-500 hover:bg-teal-600 focus:outline-none focus:border-teal-700 focus:shadow-outline-teal active:bg-teal-700 transition duration-150 ease-in-out" %>
            </span>
          </div>
        <% end %>

        <div class="mt-6 w-full text-center text-gray-400">
          <p>Already a member? <%= link_to "Log in", new_session_path(resource_name), class: "text-teal-500" %></p>
        </div>
      </div>
    </div>
  </div>
</div>
