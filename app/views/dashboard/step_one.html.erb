<div class="max-w-xs mx-auto my-36">
  <div class="flex flex-col">
    <p class="uppercase text-sm">Step 1 of 3</p>
    <h2 class="text-2xl font-medium">Create a password to make your account.</h2>
  </div>
  <%= form_for(@user, as: :user, url: registration_path(:user), html: { class: "block space-y-4" })  do |f| %>
    <div class="">
      <%= f.label :email, class: "block text-sm font-medium leading-5 text-gray-700" %>
      <div class="mt-1 rounded-md shadow-sm">
        <%= f.email_field :email, class: "appearance-none text-xl block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:leading-5" %>
      </div>
    </div>

    <div class="">
      <%= f.label :password, class: "block text-sm font-medium leading-5 text-gray-700" %>
      <div class="mt-1 rounded-md shadow-sm">
        <%= f.password_field :password, autofocus: true, class: "appearance-none text-xl block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:leading-5" %>
      </div>
    </div>

    <div class="">
      <span class="block w-full rounded-md shadow-sm">
        <%= f.submit "Continue", class: "w-full cursor-pointer text-xl flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:border-blue-700 focus:shadow-outline-blue active:bg-blue-700 transition duration-150 ease-in-out" %>
      </span>
    </div>
  <% end %>
</div>